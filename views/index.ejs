    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        background: #0a1628;
        background: radial-gradient(
          circle at 50% 50%,
          #1e3a8a 0%,
          #0a1628 50%,
          #050b14 100%
        );
        min-height: 100vh;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          Oxygen, Ubuntu, Cantarell, sans-serif;
        color: #e2e8f0;
        position: relative;
        overflow-x: hidden;
      }

      body::before {
        content: "";
        position: fixed;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(
            circle at 30% 40%,
            rgba(59, 130, 246, 0.15) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 70% 60%,
            rgba(37, 99, 235, 0.1) 0%,
            transparent 50%
          );
        animation: pulse 15s ease-in-out infinite;
        pointer-events: none;
        z-index: 0;
      }

      @keyframes pulse {
        0%,
        100% {
          transform: translate(0, 0) scale(1);
        }
        50% {
          transform: translate(-5%, -5%) scale(1.1);
        }
      }

      .container {
        max-width: 600px;
        width: 94%;
        margin: 0 auto;
        overflow: scroll;
        position: relative;
        z-index: 1;
        padding: 16px 0;
      }

      h1 {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #deecff 0%, #dbceff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 2rem;
        text-align: center;
        letter-spacing: -0.02em;
      }

      /* Glass morphism styles */
      .glass {
        background: rgba(30, 58, 138, 0.2);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border: 1px solid rgba(96, 165, 250, 0.2);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37),
          inset 0 1px 0 0 rgba(255, 255, 255, 0.05);
      }

      .glass-input {
        background: rgba(15, 23, 42, 0.5);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border: 1px solid rgba(96, 165, 250, 0.3);
        color: #e2e8f0;
        padding: 0.75rem 1rem;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
        outline: none;
      }

      .glass-input:focus {
        border-color: rgba(96, 165, 250, 0.6);
        box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.1),
          0 4px 16px rgba(59, 130, 246, 0.2);
        background: rgba(15, 23, 42, 0.7);
      }

      .glass-input::placeholder {
        color: rgba(226, 232, 240, 0.4);
      }

      .glass-button {
        background: linear-gradient(
          135deg,
          rgba(59, 130, 246, 0.4) 0%,
          rgba(37, 99, 235, 0.4) 100%
        );
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border: 1px solid rgba(96, 165, 250, 0.4);
        color: #e2e8f0;
        padding: 0.75rem 1.5rem;
        border-radius: 0.75rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 16px rgba(59, 130, 246, 0.2);
        position: relative;
        overflow: hidden;
      }

      .glass-button::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
          90deg,
          transparent,
          rgba(255, 255, 255, 0.2),
          transparent
        );
        transition: left 0.5s ease;
      }

      .glass-button:hover::before {
        left: 100%;
      }

      .glass-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 24px rgba(59, 130, 246, 0.4);
        border-color: rgba(96, 165, 250, 0.6);
      }

      .glass-button:active {
        transform: translateY(0);
      }

      .glass-button.green {
        background: linear-gradient(
          135deg,
          rgba(34, 197, 94, 0.4) 0%,
          rgba(22, 163, 74, 0.4) 100%
        );
        border-color: rgba(74, 222, 128, 0.4);
      }

      .glass-button.green:hover {
        box-shadow: 0 6px 24px rgba(34, 197, 94, 0.4);
        border-color: rgba(74, 222, 128, 0.6);
      }

      .glass-button.red {
        background: linear-gradient(
          135deg,
          rgba(239, 68, 68, 0.4) 0%,
          rgba(220, 38, 38, 0.4) 100%
        );
        border-color: rgba(248, 113, 113, 0.4);
      }

      .glass-button.red:hover {
        box-shadow: 0 6px 24px rgba(239, 68, 68, 0.4);
        border-color: rgba(248, 113, 113, 0.6);
      }

      .glass-table {
        background: rgba(30, 58, 138, 0.15);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border: 1px solid rgba(96, 165, 250, 0.2);
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
      }

      table {
        width: 100%;
        border-collapse: collapse;
      }

      thead {
        background: rgba(30, 58, 138, 0.3);
        border-bottom: 1px solid rgba(96, 165, 250, 0.3);
      }

      th {
        padding: 1rem;
        text-align: left;
        font-weight: 600;
        color: #93c5fd;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
      }

      td {
        padding: 1rem;
        border-bottom: 1px solid rgba(96, 165, 250, 0.1);
      }

      tbody tr {
        transition: background 0.2s ease;
      }

      tbody tr:hover {
        background: rgba(59, 130, 246, 0.1);
      }

      tbody tr:last-child td {
        border-bottom: none;
      }

      input[type="checkbox"] {
        appearance: none;
        -webkit-appearance: none;
        width: 1.5rem;
        height: 1.5rem;
        cursor: pointer;
        background: rgba(15, 23, 42, 0.5);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border: 2px solid rgba(96, 165, 250, 0.3);
        border-radius: 0.375rem;
        position: relative;
        transition: all 0.3s ease;
        outline: none;
      }

      input[type="checkbox"]:hover {
        border-color: rgba(96, 165, 250, 0.5);
        background: rgba(15, 23, 42, 0.7);
        box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.1);
      }

      input[type="checkbox"]:checked {
        background: linear-gradient(
          135deg,
          rgba(59, 130, 246, 0.6) 0%,
          rgba(37, 99, 235, 0.6) 100%
        );
        border-color: rgba(96, 165, 250, 0.6);
        box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.15),
          0 4px 12px rgba(59, 130, 246, 0.3);
      }

      input[type="checkbox"]:checked::after {
        content: "âœ“";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #ffffff;
        font-size: 1rem;
        font-weight: bold;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
      }

      input[type="checkbox"]:active {
        transform: scale(0.95);
      }

      .form-container {
        background: rgba(30, 58, 138, 0.2);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border: 1px solid rgba(96, 165, 250, 0.2);
        border-radius: 1rem;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
      }

      .input-small {
        padding: 0.5rem 0.75rem;
        font-size: 0.875rem;
      }

      /* Card styles */
      .card-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .todo-card {
        background: rgba(30, 58, 138, 0.2);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border: 1px solid rgba(96, 165, 250, 0.2);
        border-radius: 1rem;
        padding: 1rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease;
      }

      .todo-card:hover {
        border-color: rgba(96, 165, 250, 0.4);
        box-shadow: 0 6px 24px rgba(59, 130, 246, 0.2);
      }

      .todo-card.completed {
        background: rgba(34, 197, 94, 0.2);
        border-color: rgba(74, 222, 128, 0.3);
        box-shadow: 0 4px 16px rgba(34, 197, 94, 0.2);
      }

      .todo-card.completed:hover {
        border-color: rgba(74, 222, 128, 0.5);
        box-shadow: 0 6px 24px rgba(34, 197, 94, 0.3);
      }

      .card-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        justify-content: space-between;
      }

      .card-left {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex: 1;
        min-width: 0;
      }

      .card-title {
        font-size: 1rem;
        font-weight: 600;
        color: #e2e8f0;
        flex: 1;
        min-width: 0;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }

      .card-notes {
        font-size: 0.875rem;
        color: rgba(226, 232, 240, 0.75);
        padding: 0.75rem 1rem 0 1rem;
        width: 100%;
        line-height: 1.5;
      }

      /* Markdown styling in notes */
      .card-notes p {
        margin: 0.25rem 0;
      }

      .card-notes strong {
        color: rgba(226, 232, 240, 0.9);
        font-weight: 600;
      }

      .card-notes em {
        font-style: italic;
      }

      .card-notes code {
        background: rgba(15, 23, 42, 0.5);
        padding: 0.125rem 0.25rem;
        border-radius: 4px;
        font-family: monospace;
        font-size: 0.8rem;
      }

      .card-notes a {
        color: #60a5fa;
        text-decoration: none;
      }

      .card-notes a:hover {
        text-decoration: underline;
      }

      .card-notes ul,
      .card-notes ol {
        margin: 0.25rem 0;
        padding-left: 1.5rem;
      }

      .card-notes li {
        margin: 0.125rem 0;
      }

      .card-notes h1,
      .card-notes h2,
      .card-notes h3,
      .card-notes h4,
      .card-notes h5,
      .card-notes h6 {
        color: rgba(226, 232, 240, 0.9);
        margin: 0.5rem 0 0.25rem 0;
        font-weight: 600;
      }

      .card-notes blockquote {
        border-left: 3px solid rgba(96, 165, 250, 0.5);
        padding-left: 0.75rem;
        margin: 0.5rem 0;
        color: rgba(226, 232, 240, 0.65);
      }

      .card-checkboxes {
        display: flex;
        gap: 0.75rem;
        align-items: center;
        flex-shrink: 0;
      }

      .checkbox-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25rem;
      }

      .checkbox-label {
        font-size: 0.625rem;
        color: #93c5fd;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 600;
      }

      .card-actions {
        display: flex;
        gap: 0.5rem;
        align-items: center;
        flex-shrink: 0;
      }

      .icon-button {
        background: rgba(59, 130, 246, 0.2);
        border: 1px solid rgba(96, 165, 250, 0.3);
        border-radius: 0.5rem;
        width: 2rem;
        height: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        color: #93c5fd;
        font-size: 0.875rem;
        padding: 0;
      }

      .icon-button:hover {
        background: rgba(59, 130, 246, 0.4);
        border-color: rgba(96, 165, 250, 0.5);
        transform: translateY(-2px);
      }

      .icon-button.delete {
        background: rgba(239, 68, 68, 0.2);
        border-color: rgba(248, 113, 113, 0.3);
        color: #fca5a5;
      }

      .icon-button.delete:hover {
        background: rgba(239, 68, 68, 0.4);
        border-color: rgba(248, 113, 113, 0.5);
      }

      .icon-button.edit {
        background: rgba(34, 197, 94, 0.2);
        border-color: rgba(74, 222, 128, 0.3);
        color: #86efac;
      }

      .icon-button.edit:hover {
        background: rgba(34, 197, 94, 0.4);
        border-color: rgba(74, 222, 128, 0.5);
      }

      /* Modal/Popup styles */
      .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(8px);
        z-index: 1000;
        align-items: center;
        justify-content: center;
        padding: 1rem;
      }

      .modal.active {
        display: flex;
      }

      .modal-content {
        background: rgba(15, 23, 42, 0.95);
        backdrop-filter: blur(16px);
        border: 1px solid rgba(96, 165, 250, 0.3);
        border-radius: 1rem;
        padding: 1.5rem;
        max-width: 500px;
        width: 100%;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
        max-height: 90vh;
        overflow-y: auto;
      }

      .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
      }

      .modal-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #93c5fd;
      }

      .close-button {
        background: none;
        border: none;
        color: #93c5fd;
        font-size: 1.5rem;
        cursor: pointer;
        padding: 0;
        width: 2rem;
        height: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
      }

      .close-button:hover {
        background: rgba(59, 130, 246, 0.2);
      }

      .modal-field {
        margin-bottom: 1rem;
      }

      .modal-label {
        display: block;
        font-size: 0.875rem;
        color: #93c5fd;
        margin-bottom: 0.5rem;
        font-weight: 600;
      }

      .modal-buttons {
        display: flex;
        gap: 0.75rem;
        margin-top: 1.5rem;
      }

      .modal-buttons .glass-button {
        flex: 1;
      }

      /* Edit mode styles */
      .card-edit-mode {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(96, 165, 250, 0.2);
      }

      .edit-field {
        margin-bottom: 0.75rem;
      }

      .edit-label {
        display: block;
        font-size: 0.75rem;
        color: #93c5fd;
        margin-bottom: 0.25rem;
        font-weight: 600;
      }

      .edit-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
      }

      .edit-actions .glass-button {
        flex: 1;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
      }

      /* Logo styling */
      .logo-container {
        display: flex;
        justify-content: center;
        margin: 2rem 0;
      }

      .logo-container img {
        max-width: 200px;
        height: auto;
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
      }

      /* Progress bar styling */
      .progress-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 0 1rem;
      }

      .progress-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.75rem;
      }

      .progress-label {
        font-size: 0.875rem;
        color: rgba(226, 232, 240, 0.9);
        font-weight: 600;
      }

      .progress-stats {
        font-size: 0.875rem;
        color: rgba(226, 232, 240, 0.75);
      }

      .progress-bar-wrapper {
        width: 100%;
        height: 24px;
        background: rgba(30, 41, 59, 0.6);
        border: 1px solid rgba(148, 163, 184, 0.2);
        border-radius: 12px;
        overflow: hidden;
        backdrop-filter: blur(10px);
        box-shadow: inset 0 2px 8px rgba(0, 0, 0, 0.3);
      }

      .progress-bar-fill {
        height: 100%;
        background: linear-gradient(90deg, #3b82f6 0%, #60a5fa 100%);
        border-radius: 12px;
        transition: width 0.5s ease;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding-right: 0.75rem;
        box-shadow: 0 2px 8px rgba(59, 130, 246, 0.4);
      }

      .progress-percentage {
        font-size: 0.75rem;
        font-weight: 700;
        color: white;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
      }

      /* Add button styling */
      .add-button {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
        border: 2px solid rgba(96, 165, 250, 0.3);
        color: white;
        font-size: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: 0 8px 24px rgba(59, 130, 246, 0.4);
        transition: all 0.3s ease;
        z-index: 100;
      }

      .add-button:hover {
        transform: scale(1.1);
        box-shadow: 0 12px 32px rgba(59, 130, 246, 0.6);
        border-color: rgba(96, 165, 250, 0.5);
      }

      /* Modal styling */
      .modal-backdrop {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(15, 23, 42, 0.85);
        backdrop-filter: blur(8px);
        z-index: 200;
        align-items: center;
        justify-content: center;
      }

      .modal-backdrop.active {
        display: flex;
      }

      .modal-content {
        background: rgba(30, 41, 59, 0.95);
        border: 1px solid rgba(148, 163, 184, 0.2);
        border-radius: 16px;
        padding: 2rem;
        max-width: 500px;
        width: 90%;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(20px);
      }

      .modal-header {
        font-size: 1.5rem;
        font-weight: 700;
        color: #e2e8f0;
