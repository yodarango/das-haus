  <body>
    <div class="container mx-auto py-8 px-4 max-w-7xl">
      <h1>The Rangels</h1>

      <!-- Logo -->
      <div class="logo-container">
        <img src="/das_haus.webp" alt="Das Haus Logo" />
      </div>

      <!-- Progress Bar -->
      <div class="progress-container">
        <div class="progress-header">
          <span class="progress-label">Construction Progress</span>
          <span class="progress-stats"
            ><%= completedItems %> of <%= totalItems %> completed</span
          >
        </div>
        <div class="progress-bar-wrapper">
          <div
            class="progress-bar-fill"
            style="width: <%= progressPercentage %>%"
          >
            <% if (progressPercentage > 15) { %>
            <span class="progress-percentage"><%= progressPercentage %>%</span>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Add Button -->
      <button
        class="add-button"
        onclick="toggleAddModal()"
        title="Add New Item"
      >
        +
      </button>

      <!-- Add Item Modal -->
      <div
        class="modal-backdrop"
        id="addModal"
        onclick="closeModalOnBackdrop(event)"
      >
        <div class="modal-content">
          <div class="modal-header">Add New Item</div>
          <form action="/add" method="POST" class="modal-form">
            <input
              name="name"
              required
              placeholder="Item name"
              class="glass-input"
            />
            <textarea
              name="notes"
              placeholder="Notes (Markdown supported)"
              class="glass-input"
              style="min-height: 80px; resize: vertical; font-family: inherit;"
            ></textarea>
            <button class="glass-button" type="submit">Add Item</button>
          </form>
        </div>
      </div>

      <div class="card-container">
        <% todos.forEach(todo => { %>
        <div
          class="todo-card <%= (todo.is_purchased && todo.is_installed) ? 'completed' : '' %>"
          id="card-<%= todo.id %>"
          data-notes-html="<%= todo.notes_html.replace(/"/g, '&quot;') %>"
        >
          <div class="card-header">
            <div class="card-left">
              <div class="card-checkboxes">
                <div class="checkbox-wrapper">
                  <span class="checkbox-label">Buy</span>
                  <input type="checkbox" <%= todo.is_purchased ? 'checked' : ''
                  %> onchange="quickUpdate(<%= todo.id %>, 'is_purchased',
                  this.checked)">
                </div>
                <div class="checkbox-wrapper">
                  <span class="checkbox-label">Done</span>
                  <input type="checkbox" <%= todo.is_installed ? 'checked' : ''
                  %> onchange="quickUpdate(<%= todo.id %>, 'is_installed',
                  this.checked)">
                </div>
              </div>
              <span class="card-title"><%= todo.name %></span>
            </div>
            <div class="card-actions">
              <button
                class="icon-button"
                onclick="toggleDetails(<%= todo.id %>)"
                title="Details"
              >
                â‹¯
              </button>
              <button
                class="icon-button edit"
                onclick="toggleEdit(<%= todo.id %>)"
                title="Edit"
              >
                âœŽ
              </button>
              <form
                action="/delete/<%= todo.id %>"
                method="POST"
                style="display: inline"
                onsubmit="return confirm('Delete <%= todo.name %>?')"
              >
                <button type="submit" class="icon-button delete" title="Delete">
                  ðŸ—‘
                </button>
              </form>
            </div>
          </div>

          <!-- Notes Display -->
          <% if (todo.notes && todo.notes.trim() !== '') { %>
          <div class="card-notes"><%- todo.notes_html %></div>
          <% } %>

          <!-- Edit Mode -->
          <div
            class="card-edit-mode"
            id="edit-<%= todo.id %>"
            style="display: none"
          >
            <form
              action="/update/<%= todo.id %>"
              method="POST"
              onsubmit="return validateDates(this)"
            >
              <div class="edit-field">
                <label class="edit-label">Name</label>
                <input
                  name="name"
                  value="<%= todo.name %>"
                  class="glass-input input-small"
                  style="width: 100%"
                  required
                />
              </div>
              <div class="edit-field">
                <label class="edit-label">Purchased On (MM/DD/YY)</label>
                <input
                  type="text"
                  name="purchased_on"
                  value="<%= todo.purchased_on_display || '' %>"
                  class="glass-input input-small"
                  style="width: 100%"
                  placeholder="MM/DD/YY"
                  pattern="\d{1,2}/\d{1,2}/\d{2}"
                />
              </div>
              <div class="edit-field">
                <label class="edit-label">Installed On (MM/DD/YY)</label>
                <input
                  type="text"
                  name="installed_on"
                  value="<%= todo.installed_on_display || '' %>"
                  class="glass-input input-small"
                  style="width: 100%"
                  placeholder="MM/DD/YY"
                  pattern="\d{1,2}/\d{1,2}/\d{2}"
                />
              </div>
              <div class="edit-field">
                <label class="edit-label">Notes (Markdown supported)</label>
                <textarea
                  name="notes"
                  class="glass-input input-small"
                  style="width: 100%; min-height: 80px; resize: vertical; font-family: inherit;"
                  placeholder="**bold** *italic* [link](url)"
                ><%= todo.notes || '' %></textarea>
              </div>
              <div class="edit-actions">
                <button
                  type="button"
                  class="glass-button"
                  onclick="toggleEdit(<%= todo.id %>)"
                >
                  Cancel
                </button>
                <button type="submit" class="glass-button green">
                  Save Changes
                </button>
              </div>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <!-- Details Modal -->
    <div class="modal" id="detailsModal">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title" id="modalTitle">Item Details</h2>
          <button class="close-button" onclick="closeModal()">Ã—</button>
        </div>
        <div id="modalBody"></div>
      </div>
    </div>

    <script>
      function validateDates(form) {
        const purchasedOn = form.querySelector(
          'input[name="purchased_on"]'
        ).value;
        const installedOn = form.querySelector(
          'input[name="installed_on"]'
        ).value;

        const datePattern = /^(\d{1,2})\/(\d{1,2})\/(\d{2})$/;

        if (purchasedOn && purchasedOn.trim() !== "") {
          const match = purchasedOn.match(datePattern);
          if (!match) {
            alert(
              "Invalid purchased date format. Please use MM/DD/YY (e.g., 12/25/24)"
            );
            return false;
          }
          const month = parseInt(match[1], 10);
          const day = parseInt(match[2], 10);
          if (month < 1 || month > 12 || day < 1 || day > 31) {
            alert(
              "Invalid purchased date. Month must be 1-12 and day must be 1-31."
            );
            return false;
          }
        }

        if (installedOn && installedOn.trim() !== "") {
          const match = installedOn.match(datePattern);
          if (!match) {
            alert(
              "Invalid installed date format. Please use MM/DD/YY (e.g., 12/25/24)"
            );
            return false;
          }
          const month = parseInt(match[1], 10);
          const day = parseInt(match[2], 10);
          if (month < 1 || month > 12 || day < 1 || day > 31) {
            alert(
              "Invalid installed date. Month must be 1-12 and day must be 1-31."
            );
            return false;
          }
        }

        return true;
      }

      function toggleEdit(id) {
        const editSection = document.getElementById(`edit-${id}`);
        if (editSection.style.display === "none") {
          editSection.style.display = "block";
        } else {
          editSection.style.display = "none";
        }
      }

      function toggleDetails(id) {
        const modal = document.getElementById("detailsModal");
        const card = document.getElementById(`card-${id}`);

        // Get todo data from the card
        const name = card.querySelector(".card-title").textContent;
        const isPurchased = card.querySelector(
          'input[onchange*="is_purchased"]'
        ).checked;
        const isInstalled = card.querySelector(
          'input[onchange*="is_installed"]'
        ).checked;

        // Get additional data from edit form
        const editForm = document
          .getElementById(`edit-${id}`)
          .querySelector("form");
        const purchasedOn = editForm.querySelector(
          'input[name="purchased_on"]'
        ).value;
        const installedOn = editForm.querySelector(
          'input[name="installed_on"]'
        ).value;
        const notes = editForm.querySelector('textarea[name="notes"]').value;

        // Get rendered markdown HTML from card data attribute
        const notesHtml = card.getAttribute('data-notes-html') || '';

        document.getElementById("modalTitle").textContent = name;
        document.getElementById("modalBody").innerHTML = `
        <div class="modal-field">
          <span class="modal-label">Status</span>
          <div style="display: flex; gap: 1rem; margin-top: 0.5rem;">
            <span style="color: ${isPurchased ? "#86efac" : "#fca5a5"};">
              ${isPurchased ? "âœ“" : "âœ—"} Purchased
            </span>
            <span style="color: ${isInstalled ? "#86efac" : "#fca5a5"};">
              ${isInstalled ? "âœ“" : "âœ—"} Installed
            </span>
          </div>
        </div>
        ${
          purchasedOn
            ? `
        <div class="modal-field">
          <span class="modal-label">Purchased On</span>
          <div style="color: #e2e8f0; margin-top: 0.5rem;">${new Date(
            purchasedOn
          ).toLocaleDateString()}</div>
        </div>
        `
            : ""
        }
        ${
          installedOn
            ? `
        <div class="modal-field">
          <span class="modal-label">Installed On</span>
          <div style="color: #e2e8f0; margin-top: 0.5rem;">${new Date(
            installedOn
          ).toLocaleDateString()}</div>
        </div>
        `
            : ""
        }
        ${
          notesHtml
            ? `
        <div class="modal-field">
          <span class="modal-label">Notes</span>
          <div style="color: #e2e8f0; margin-top: 0.5rem; line-height: 1.5;">${notesHtml}</div>
        </div>
        `
            : ""
        }
      `;

        modal.classList.add("active");
      }

      function closeModal() {
        document.getElementById("detailsModal").classList.remove("active");
      }

      // Close modal when clicking outside
      document
        .getElementById("detailsModal")
        .addEventListener("click", function (e) {
          if (e.target === this) {
            closeModal();
          }
        });

      function quickUpdate(id, field, value) {
        // Create a form and submit it
        const form = document.createElement("form");
        form.method = "POST";
        form.action = `/update/${id}`;

        // Get current values from edit form
        const editForm = document
          .getElementById(`edit-${id}`)
          .querySelector("form");
        const name = editForm.querySelector('input[name="name"]').value;
        const purchasedOn = editForm.querySelector(
          'input[name="purchased_on"]'
        ).value;
        const installedOn = editForm.querySelector(
          'input[name="installed_on"]'
        ).value;
        const notes = editForm.querySelector('textarea[name="notes"]').value;
        const isPurchased =
          field === "is_purchased"
            ? value
            : editForm.querySelector('input[name="is_purchased"]').value ===
              "1";
        const isInstalled =
          field === "is_installed"
            ? value
            : editForm.querySelector('input[name="is_installed"]').value ===
              "1";

        // Update the card's completed class before submitting
        const card = document.getElementById(`card-${id}`);
        if (isPurchased && isInstalled) {
          card.classList.add("completed");
        } else {
          card.classList.remove("completed");
        }

        // Add all fields
        const fields = {
          name: name,
          is_purchased: isPurchased ? "on" : "",
          is_installed: isInstalled ? "on" : "",
          purchased_on: purchasedOn,
          installed_on: installedOn,
          notes: notes,
        };

        for (const [key, val] of Object.entries(fields)) {
          const input = document.createElement("input");
          input.type = "hidden";
          input.name = key;
          input.value = val;
          form.appendChild(input);
        }

        document.body.appendChild(form);
        form.submit();
      }

      // Toggle add modal
      function toggleAddModal() {
        const modal = document.getElementById("addModal");
        modal.classList.toggle("active");
      }

      // Close modal when clicking on backdrop
      function closeModalOnBackdrop(event) {
        if (event.target.id === "addModal") {
          toggleAddModal();
        }
      }
    </script>
  </body>
</html>
